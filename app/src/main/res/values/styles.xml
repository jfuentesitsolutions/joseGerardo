<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="editTextColor">@color/colorText</item>
    </style>

    <style name="color_mora" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/mora_azul</item>
        <item name="colorPrimaryDark">@color/mora</item>
        <item name="colorAccent">@color/mora_tierna</item>
        <item name="colorButtonNormal">@color/mora_falta</item>
    </style>

    <style name="color_mango" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/mango</item>
        <item name="colorPrimaryDark">@color/amarillo_mango</item>
        <item name="colorAccent">@color/mango_maduro</item>
        <item name="colorButtonNormal">@color/mango</item>
    </style>

    <style name="color_mango.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mango</item>
        <item name="colorPrimaryDark">@color/amarillo_mango</item>
        <item name="colorAccent">@color/mango_maduro</item>
        <item name="colorSecondary">@color/blanco</item>
    </style>

    <style name="color_manzana" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/manzana_verde</item>
        <item name="colorPrimaryDark">@color/manzana</item>
        <item name="colorAccent">@color/manzana_gala</item>
        <item name="colorSecondary">@color/blanco</item>
        <item name="colorButtonNormal">@color/manzana</item>
    </style>

    <style name="color_manzana.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/manzana_verde</item>
        <item name="colorPrimaryDark">@color/manzana</item>
        <item name="colorAccent">@color/manzana_gala</item>
        <item name="colorSecondary">@color/blanco</item>
    </style>

    <style name="color_remolacha" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/remolacha_falta</item>
        <item name="colorPrimaryDark">@color/remolacha_tierna</item>
        <item name="colorAccent">@color/remolacha</item>
        <item name="colorSecondary">@color/blanco</item>
        <item name="colorButtonNormal">@color/remolacha</item>
    </style>

    <style name="color_remolacha.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/remolacha_falta</item>
        <item name="colorPrimaryDark">@color/remolacha_tierna</item>
        <item name="colorAccent">@color/remolacha</item>
        <item name="colorSecondary">@color/blanco</item>
    </style>

    <style name="color_uva" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/uva_tierna</item>
        <item name="colorPrimaryDark">@color/uva</item>
        <item name="colorAccent">@color/uva_madura</item>
        <item name="colorSecondary">@color/blanco</item>
        <item name="colorButtonNormal">@color/uva</item>
    </style>

    <style name="color_uva.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/uva_tierna</item>
        <item name="colorPrimaryDark">@color/uva</item>
        <item name="colorAccent">@color/uva_madura</item>
        <item name="colorSecondary">@color/blanco</item>
    </style>

    <style name="tema_login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f5f4f2</item>
        <item name="colorPrimaryDark">#4D4D4B</item>
        <item name="colorAccent">#f5f4f2</item>
    </style>

    <style name="tema_btn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f5f4f2</item>
        <item name="colorPrimaryDark">#4D4D4B</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="tema_btn_2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f5f4f2</item>
        <item name="colorPrimaryDark">#4D4D4B</item>
        <item name="colorAccent">#039BE5</item>
    </style>


    <style name="color_linea" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>

    <style name="redondo" parent="TextAppearance.AppCompat.Button">
        <item name="android:bottomRightRadius">10dp</item>
    </style>

    <style name="material_botonA" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
