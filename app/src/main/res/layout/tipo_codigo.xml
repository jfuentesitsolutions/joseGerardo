<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elija la captura de codigo"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <EditText
                    android:id="@+id/txtCodigoManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingrese el codigo"
                    android:inputType="numberDecimal"/>

                <Button
                    android:id="@+id/btnBManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar" />
            </TableRow>
                <Button
                    android:id="@+id/btnEscanear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FCFCFC"
                    android:drawableBottom="@drawable/codigo"
                    android:text="Escanear codigo"
                    android:textColorHint="#003333D6"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="149dp"
                    android:textAlignment="center"/>
            <TableRow>
            </TableRow>
        </TableLayout>

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>